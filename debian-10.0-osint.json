{
    "variables": {},
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<esc><wait>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
                "debian-installer=en_US.UTF-8 <wait>",
                "auto <wait>",
                "locale=en_US.UTF-8 <wait>",
                "kbd-chooser/method=us <wait>",
                "keyboard-configuration/xkb-keymap=us <wait>",
                "netcfg/get_hostname={{ .Name }} <wait>",
                "netcfg/get_domain=vagrantup.com <wait>",
                "fb=false <wait>",
                "debconf/frontend=noninteractive <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "grub-installer/bootdev=/dev/sda <wait>",
                "<enter><wait>"
            ],
            "boot_wait": "5s",
            "guest_os_type": "Debian_64",
            "iso_url": "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-10.2.0-amd64-xfce-CD-1.iso",
            "iso_checksum": "745172d8ba09f054335cc738409aede5c5f3463ae39df0a008eb41ceeba44b5c",
            "iso_checksum_type": "sha256",
            "disk_size": 20480,
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "guest_os_type": "Debian_64",
            "virtualbox_version_file": ".vbox_version",
            "vm_name": "packer-debian-10-osint",
            "http_directory": "http",
            "headless": true,
            "shutdown_command": "echo 'ints0'|sudo -S shutdown -P now",
            "vboxmanage": [
                [ "modifyvm", "{{.Name}}", "--memory", "4096" ],
                [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
            ],
            "ssh_username": "osint",
            "ssh_password": "ints0",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'ints0' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "script": "scripts/system-setup.sh"
        },
        {
            "type": "shell",
            "execute_command": "echo 'ints0' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "script": "scripts/vboxguestadd.sh"
        },
        {
            "type": "shell",
            "script": "scripts/user-setup.sh"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "osint-debian-{{user `debian_version`}}-amd64_{{.Provider}}.box"
        }
    ]
}
